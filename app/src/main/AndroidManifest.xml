<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.todo_app">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.App"
        tools:targetApi="31">
        <activity
            android:name=".views.jetpack.TodoMainBottomSheetActivity"
            android:exported="false"
            android:label="@string/title_activity_todo_main_bottom_sheet"
            android:theme="@style/Theme.App" />
        <activity
            android:name=".views.jetpack.NavActivity"
            android:exported="false"
            android:label="@string/title_activity_nav"
            android:theme="@style/Theme.App" />
        <activity
            android:name=".views.java.activities.FrameActivity"
            android:exported="false" />
        <activity
            android:name=".SwitchFrameworkActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>